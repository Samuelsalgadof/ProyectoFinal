<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.unquindio.proyectofinal.dwr.viewController.CategoriaViewController"
            prefHeight="709.0" prefWidth="1033.0" style="-fx-background-color: #013220; -fx-padding: 20;">

    <children>
        <!-- Título -->
        <Label layoutX="400.0" layoutY="10.0" text="Gestión de Categorías" style="-fx-font-size: 24px; -fx-text-fill: #00FF7F; -fx-font-weight: bold;" />

        <!-- Formulario -->
        <GridPane hgap="10" layoutX="116.0" layoutY="50.0" prefHeight="250.0" prefWidth="800.0" style="-fx-background-color: #3C3F41; -fx-padding: 20; -fx-border-color: #00FF7F; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="150" />
                <ColumnConstraints minWidth="400" />
            </columnConstraints>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <!-- Campos -->
                <Label style="-fx-text-fill: #A9DFBF;" text="Nombre de Categoría:" />
                <TextField fx:id="txtNombreCategoria" prefHeight="27.0" style="-fx-background-color: #1C2833; -fx-text-fill: #A9DFBF; -fx-border-color: #00FF7F;" GridPane.columnIndex="1" />

                <Label style="-fx-text-fill: #A9DFBF;" text="Descripción:" GridPane.rowIndex="1" />
                <TextArea fx:id="txtDescripcionCategoria" prefHeight="70.0" style="-fx-background-color: #1C2833; -fx-text-fill: #A9DFBF; -fx-border-color: #00FF7F;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label style="-fx-text-fill: #A9DFBF;" text="Asignar Categoría a Transacción:" GridPane.rowIndex="2" />
                <ComboBox fx:id="cbCategoria" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="400.0" style="-fx-background-color: #1C2833; -fx-text-fill: #A9DFBF; -fx-border-color: #00FF7F;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Categoría 1" />
                            <String fx:value="Categoría 2" />
                            <String fx:value="Categoría 3" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Botones -->
                <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="btnCrearCategoria" style="-fx-background-color: #28B463; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Crear" />
                        <Button fx:id="btnActualizarCategoria" style="-fx-background-color: #28B463; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Actualizar" />
                    </children>
                </HBox>
            </children>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- Tabla de Categorías -->
        <TableView fx:id="tableCategorias" layoutX="20.0" layoutY="330.0" prefHeight="300.0" prefWidth="994.0" style="-fx-background-color: #2E8B57; -fx-border-color: #00FF7F; -fx-border-width: 2; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colIdCategoria" prefWidth="100.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="ID" />
                <TableColumn fx:id="colNombreCategoria" prefWidth="300.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="Nombre" />
                <TableColumn fx:id="colDescripcionCategoria" prefWidth="500.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="Descripción" />
            </columns>
        </TableView>

        <!-- Botones para Gestión -->
        <HBox alignment="CENTER" layoutX="400.0" layoutY="670.0" spacing="20">
            <children>
                <Button fx:id="btnEliminarCategoria" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Eliminar" />
                <Button fx:id="btnListarCategorias" style="-fx-background-color: #28B463; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Listar Categorías" />
            </children>
        </HBox>
    </children>
</AnchorPane>
