<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.unquindio.proyectofinal.dwr.viewController.AppViewController"
            prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #063424;">

    <children>
        <!-- Encabezado del Saldo Disponible -->
        <Pane layoutX="20.0" layoutY="20.0" prefHeight="120.0" prefWidth="320.0" style="-fx-background-color: #04854B; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 15, 0, 0, 5);">
            <children>
                <Label layoutX="20.0" layoutY="20.0" text="Disponible" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label layoutX="20.0" layoutY="50.0" text="250,000" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #A9DFBF;" />
                <Label layoutX="20.0" layoutY="80.0" text="Total: $250,000" style="-fx-font-size: 16px; -fx-text-fill: white;" />
            </children>
        </Pane>

        <!-- Botones de Opciones -->
        <HBox layoutX="40.0" layoutY="400.0" spacing="30.0" alignment="CENTER">
            <children>
                <!-- Botón Retiro -->
                <VBox alignment="CENTER">
                    <Button prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #04854B; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                    </Button>
                    <Label text="Retiro" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                </VBox>

                <!-- Botón Envío -->
                <VBox alignment="CENTER">
                    <Button prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #04854B; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                    </Button>
                    <Label text="Envío" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                </VBox>

                <!-- Botón Pago -->
                <VBox alignment="CENTER">
                    <Button prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #04854B; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                    </Button>
                    <Label text="Pago" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                </VBox>
            </children>
        </HBox>

        <!-- Barra de navegación inferior -->
        <HBox layoutX="0.0" layoutY="580.0" prefHeight="60.0" prefWidth="360.0" style="-fx-background-color: #035A33; -fx-background-radius: 30 30 0 0;">
            <children>
                <Button layoutX="50.0" layoutY="10.0" mnemonicParsing="false" text="Inicio" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button layoutX="150.0" layoutY="10.0" mnemonicParsing="false" text="Opciones" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button layoutX="250.0" layoutY="10.0" mnemonicParsing="false" text="Perfil" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            </children>
        </HBox>
    </children>
</AnchorPane>