<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="709.0" prefWidth="1033.0" style="-fx-background-color: #013220; -fx-padding: 20;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.unquindio.proyectofinal.dwr.viewController.PresupuestoViewController">

    <children>
        <!-- Formulario -->
        <GridPane hgap="10" layoutX="116.0" layoutY="20.0" prefHeight="250.0" prefWidth="800.0" style="-fx-background-color: #3C3F41; -fx-padding: 20; -fx-border-color: #00FF7F; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="150" />
                <ColumnConstraints minWidth="300" />
            </columnConstraints>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label style="-fx-text-fill: #A9DFBF;" text="Nombre del Banco:" />
                <ComboBox fx:id="cbBanco" style="-fx-background-color: #1C2833; -fx-text-fill: #A9DFBF; -fx-border-color: #00FF7F;" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Banco 1" />
                            <String fx:value="Banco 2" />
                            <String fx:value="Banco 3" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label style="-fx-text-fill: #A9DFBF;" text="Tipo de Cuenta:" GridPane.rowIndex="1" />
                <ComboBox fx:id="cbTipoCuenta" style="-fx-background-color: #1C2833; -fx-text-fill: #A9DFBF; -fx-border-color: #00FF7F;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Ahorros" />
                            <String fx:value="Corriente" />
                            <String fx:value="Crédito" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label style="-fx-text-fill: #A9DFBF;" text="Número de Cuenta:" GridPane.rowIndex="2" />
                <TextField fx:id="txtNumeroCuenta" prefHeight="27.0" style="-fx-background-color: #1C2833; -fx-text-fill: #A9DFBF; -fx-border-color: #00FF7F;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="btnAgregar" style="-fx-background-color: #28B463; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Agregar" />
                        <Button fx:id="btnActualizar" style="-fx-background-color: #28B463; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Actualizar" />
                    </children>
                </HBox>
            </children>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- Tabla de Cuentas -->
        <TableView fx:id="tableCuentas" layoutX="20.0" layoutY="280.0" prefHeight="350.0" prefWidth="994.0" style="-fx-background-color: #2E8B57; -fx-border-color: #00FF7F; -fx-border-width: 2; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colIdCuenta" prefWidth="223.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="ID Cuenta" />
                <TableColumn fx:id="colBanco" prefWidth="275.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="Nombre del Banco" />
                <TableColumn fx:id="colTipoCuenta" prefWidth="262.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="Tipo de Cuenta" />
                <TableColumn fx:id="colNumeroCuenta" prefWidth="231.0" style="-fx-background-color: #A9DFBF; -fx-text-fill: #0f2d03;" text="Número de Cuenta" />
            </columns>
        </TableView>

        <!-- Botón Eliminar -->
        <Button fx:id="btnEliminar" layoutX="450.0" layoutY="650.0" style="-fx-background-color: #00ff7f; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" text="Eliminar" />
    </children>
</AnchorPane>
